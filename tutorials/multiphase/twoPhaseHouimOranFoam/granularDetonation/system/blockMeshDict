FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

l 10;
h 20;
w 0.1;

vertices
(
    (0  0  0)
    ($l 0  0)
    ($l $h 0)
    (0  $h 0)
    (0  0  $w)
    ($l 0  $w)
    ($l $h $w)
    (0  $h $w)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (500 800 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    walls
    {
        type patch;
        faces
        (
            (1 5 4 0)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
            (2 6 5 1)
            (3 7 6 2)
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
//             (3 7 6 2)
//             (1 5 4 0)
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

