FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

compressible.air
{
    fluxScheme      HLLC;
}
compressible.particles
{
    fluxScheme      AUSMPlus;
    alphaMax        0.63;
    alphaMinFriction 0.55;
}

ddtSchemes
{
    default         Euler;
    fluxIntegrator  Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default             none;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default                 linear;

    reconstruct(alpha.particles) upwind;
    reconstruct(alpha.air) upwind;
    reconstruct(thermo:rho.air)    upwind;
    reconstruct(thermo:rho.particles)  upwind;
    reconstruct(U.air)      upwind;
    reconstruct(U.particles)    upwind;
    reconstruct(H.air)      upwind;
    reconstruct(E.particles)      upwind;
    reconstruct(Theta.particles)    upwind;
    reconstruct(p.air)      upwind;
    reconstruct(Ps.particles)    upwind;
    reconstruct(a.air)      upwind;
    reconstruct(a.particles)    upwind;
}

snGradSchemes
{
    default         corrected;
}


