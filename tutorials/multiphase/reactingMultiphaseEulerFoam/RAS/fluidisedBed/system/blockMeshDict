FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters .001;

pi  3.141529;
h   1000;
D   32;
R   #calc "$D/2";
nR  #calc "-$R";
r   #calc "$R/2";
nr  #calc "-$r";
xy  #calc "$R*sin($pi/4)";
nxy #calc "-$xy";

vertices
(
//    (0   $nR 0)
//    ($R  0   0)
//    (0   $R  0)
//    ($nR 0   0)
//    (0   $nr 0)
//    ($r  0   0)
//    (0   $r  0)
//    ($nr 0   0)
//
//    (0   $nR $h)
//    ($R  0   $h)
//    (0   $R  $h)
//    ($nR 0   $h)
//    (0   $nr $h)
//    ($r  0   $h)
//    (0   $r  $h)
//    ($nr 0   $h)

    ($nR $nR 0)
    ($R  $nR 0)
    ($R  $R  0)
    ($nR $R  0)

    ($nR $nR $h)
    ($R  $nR $h)
    ($R  $R  $h)
    ($nR $R  $h)
);

blocks
(
//     hex (0 1 5 4 8 9 13 12) (12 8 100) simpleGrading (1 1.5 1)
//     hex (1 2 6 5 9 10 14 13) (12 8 100) simpleGrading (1 1.5 1)
//     hex (2 3 7 6 10 11 15 14) (12 8 100) simpleGrading (1 1.5 1)
//     hex (3 0 4 7 11 8 12 15) (12 8 100) simpleGrading (1 1.5 1)
//     hex (4 5 6 7 12 13 14 15) (12 12 100) simpleGrading (1 1 1)
    hex (0 1 2 3 4 5 6 7) (38 1 80)
    simpleGrading
    (
        (
            (   0.0621352389 0.107142857143 4)    // 20% y-dir, 30% cells, expansion = 4
            (   0.8757295222 0.785714285714 1)    // 60% y-dir, 40% cells, expansion = 1
            (   0.0621352389 0.107142857143 0.25)  // 20% y-dir, 30% cells, expansion = 0.25 (1/4)
        )
	    1                  // y-direction expansion ratio
        1                  // z-direction expansion ratio
    )
);

edges
(
//     arc 0 1 ($xy  $nxy 0)
//     arc 1 2 ($xy  $xy  0)
//     arc 2 3 ($nxy $xy  0)
//     arc 3 0 ($nxy $nxy 0)
//
//     arc 8 9   ($xy  $nxy $h)
//     arc 9 10  ($xy  $xy  $h)
//     arc 10 11 ($nxy $xy  $h)
//     arc 11 8  ($nxy $nxy $h)
);

patches
(
    patch inlet
    (
//         (0 1 5 4)
//         (1 2 6 5)
//         (2 3 7 6)
//         (3 0 4 7)
//         (4 5 6 7)
        (0 1 2 3)
    )
    patch outlet
    (
//         (8 9 13 12)
//         (9 10 14 13)
//         (10 11 15 14)
//         (11 8 12 15)
//         (12 13 14 15)
        (4 5 6 7)
    )
    wall walls
    (
//         (0 1 9 8)
//         (1 2 10 9)
//         (2 3 11 10)
//         (3 0 8 11)
        (1 5 6 2)
        (0 4 7 3)
    )
);

mergePatchPairs
(
);

